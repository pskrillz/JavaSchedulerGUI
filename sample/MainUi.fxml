                        <TextField fx:id="custNameF" layoutX="65.0" layoutY="201.0" promptText="Enter name" />
                        <TextField fx:id="custAddrF" layoutX="65.0" layoutY="306.0" prefHeight="25.0" prefWidth="239.0" promptText="Do not include first division or country" />
                        <TextField fx:id="custZipF" layoutX="65.0" layoutY="479.0" promptText="Enter Postal Code" />
                        <TextField fx:id="custPhoneF" layoutX="65.0" layoutY="257.0" promptText="(999) 999-9999 format" />
                        <TextField fx:id="custSearchF" layoutX="995.0" layoutY="85.0" promptText="Search by name or ID" />
                        <Button fx:id="custSearchBtn" layoutX="1171.0" layoutY="85.0" mnemonicParsing="false" text="Search" />
                        <Label layoutX="65.0" layoutY="131.0" prefHeight="17.0" prefWidth="72.0" text="Customer ID:" />
                        <Label layoutX="65.0" layoutY="184.0" prefHeight="17.0" prefWidth="92.0" text="Name:" />
                        <Button fx:id="custDeleteBtn" onAction="#deleteCustomer" disable="true" layoutX="1128.0" layoutY="708.0" mnemonicParsing="false" text="Delete Selected" />
