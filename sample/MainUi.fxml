            </content>
          </Tab>
            <Tab text="Appointments">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="800.0" prefWidth="2000.0">
                     <children>
                        <TableView layoutX="550.0" layoutY="65.0" prefHeight="650.0" prefWidth="900.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="C1" />
                            <TableColumn prefWidth="75.0" text="C2" />
                          </columns>
                        </TableView>
                     </children></AnchorPane>
               </content>
            </Tab>
            <Tab text="Reports">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="800.0" prefWidth="500.0" />
